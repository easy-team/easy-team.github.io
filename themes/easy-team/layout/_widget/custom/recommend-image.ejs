<%
    var recommendImages = site.data.recommendImage[page.space || 'home'];
    var recommendCount = recommendImages && recommendImages.length;
%>
<% if (recommendCount > 0) { %>
    <%
        var rec = recommendImages[0];
        var featureImg = rec.coverImage;
    %>
    <div class="title"><i class="far fa-thumbs-up"></i>&nbsp;&nbsp;<%- __('resRecommendedImageTitle') %></div>
    <div class="row">
        <div class="col s12">
            <div class="post-card-image" style="background-image: url('<%- featureImg %>')">
                <div class="post-body">
                    <a href="<%- url_for(rec.url) %>"></a>
                </div>
            </div>
        </div>
    </div>

<% } %>