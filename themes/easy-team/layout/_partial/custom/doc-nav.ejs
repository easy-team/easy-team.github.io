<div class="side-nav docsidenav" style="width:<%if(page.space=='blog'){%>400px<%}%>">
    <div class="doc-left-nav-title"><%- page.space %></div>
    <ul class="menu-list mobile-menu-list">
        <% site.data[page.space].forEach(function(doc) { %>
            <% if(doc.children) { %>
                <li class="m-nav-item m-nav-show">
                    <a href="javascript:;">
                        <i class="fas fa-fw fa-link"></i>
                        <%- doc.title %>
                        <span class="m-icon"><i class="fas fa-chevron-right"></i></span>
                    </a>
                    <ul <%if(theme.navMenu&&theme.navMenu.bgColor){%> style="display:block; background: <%-theme.navMenu.bgColor%>;"<%}%> >
                        <% for(let childrenDoc of doc.children){ %>
                            <li>   
                                <a id="m-nav-item-<%- childrenDoc.space %>-<%- childrenDoc.slug %>" href="<%- url_for(childrenDoc.url)%> " 
                                    style="padding:0px 0px;margin-left:<%if(theme.navMenu&&theme.navMenu.mleft){%>50px<%}else{%>75px<%}%>";>
                                <% if (childrenDoc.icon && childrenDoc.icon.length > 0) { %>
                                <i class="fa <%- childrenDoc.icon %>" style="position: absolute;left:<%if(theme.navMenu&&theme.navMenu.mleft){%>28px<%}else{%>50px<%}%>" ></i>
                                <% } %>
                                <span><%- childrenDoc.title %></span>
                                </a>
                            </li>
                        <% } %> 
                    </ul>
                </li>
            <% } else { %>
                <li class="m-nav-item">
                    <a href="<%- doc.url %>" class="waves-effect waves-light" id="m-nav-item-<%- doc.space %>-<%- doc.slug %>">
                        <% if (doc.icon) { %>
                            <i class="fa-fw <%- doc.icon %>"></i>
                        <% } else { %>
                        <i class="fas fa-fw fa-link"></i>
                        <% } %>
                        <%- doc.title %>
                    </a>
                </li>
            <% } %>
        <% }) %>
        <li><div class="divider"></div></li>
        
        <li>
            <a href="<%- site.data.config[page.space].btn.yuque %>" class="waves-effect waves-light" target="_blank">
                <i class="fas fa-fw fa-link"></i>语雀文档
            </a>
        </li>
        <li>
            <a href="<%- site.data.config[page.space].btn.url %>" class="waves-effect waves-light" target="_blank">
                <i class="fab fa-github-square fa-fw"></i><%- site.data.config[page.space].btn.name %>
            </a>
        </li>
    </ul>
</div>
